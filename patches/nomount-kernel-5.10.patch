+		return -ENOMEM;
+	}
+
+	entry->mount_id = mount_id;
+	entry->flags = 0;
+
+	spin_lock(&nomount_lock);
+	hash_add_rcu(nomount_hidden_mounts_ht, &entry->node, mount_id);
+	spin_unlock(&nomount_lock);
+
+	NM_INFO("hide_mount: success mount_id=%d\n", mount_id);
