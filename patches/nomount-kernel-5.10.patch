+static int nomount_ioctl_clear_hidden_mounts(void)
+{
+	struct nomount_hidden_mount *entry;
+	struct hlist_node *tmp;
+	int bkt;
+	int count = 0;
+
+	NM_INFO("clear_hidden_mounts: clearing all hidden mounts\n");
+
+	spin_lock(&nomount_lock);
