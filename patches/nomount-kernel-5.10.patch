+			hash_del_rcu(&entry->node);
+			found = true;
+			break;
+		}
+	}
+	spin_unlock(&nomount_lock);
+
+	if (found && entry) {
+		NM_INFO("unhide_mount: success mount_id=%d\n", mount_id);
+		kfree_rcu(entry, rcu);
+	} else {
+		NM_ERR("unhide_mount: mount_id=%d not found\n", mount_id);
+	}
+
+	return found ? 0 : -ENOENT;
+}
