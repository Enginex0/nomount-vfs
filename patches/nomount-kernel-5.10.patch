+static void nomount_get_parent_timestamps(const char *path, struct kstat *stat)
+{
+	char *parent_path;
+	char *last_slash;
+	struct path parent;
+	struct kstat parent_stat;
+
+	if (!path || strlen(path) < 2)
+		return;
+
+	parent_path = kstrdup(path, GFP_KERNEL);
+	if (!parent_path)
+		return;
+
+	last_slash = strrchr(parent_path, '/');
+	if (last_slash && last_slash != parent_path) {
+		*last_slash = '\0';
+	} else {
+		/* Root directory - use static time */
+		kfree(parent_path);
+		stat->atime.tv_sec = STOCK_ANDROID_TIME;
+		stat->mtime.tv_sec = STOCK_ANDROID_TIME;
+		stat->ctime.tv_sec = STOCK_ANDROID_TIME;
+		stat->atime.tv_nsec = 0;
+		stat->mtime.tv_nsec = 0;
+		stat->ctime.tv_nsec = 0;
+		return;
+	}
+
+	if (kern_path(parent_path, LOOKUP_FOLLOW, &parent) == 0) {
+		if (vfs_getattr(&parent, &parent_stat, STATX_BASIC_STATS, AT_STATX_SYNC_AS_STAT) == 0) {
+			stat->atime = parent_stat.atime;
+			stat->mtime = parent_stat.mtime;
+			stat->ctime = parent_stat.ctime;
+		} else {
+			/* Fallback to static */
+			stat->atime.tv_sec = STOCK_ANDROID_TIME;
+			stat->mtime.tv_sec = STOCK_ANDROID_TIME;
+			stat->ctime.tv_sec = STOCK_ANDROID_TIME;
+			stat->atime.tv_nsec = 0;
+			stat->mtime.tv_nsec = 0;
+			stat->ctime.tv_nsec = 0;
+		}
+		path_put(&parent);
+	} else {
+		/* Fallback to static */
+		stat->atime.tv_sec = STOCK_ANDROID_TIME;
+		stat->mtime.tv_sec = STOCK_ANDROID_TIME;
+		stat->ctime.tv_sec = STOCK_ANDROID_TIME;
+		stat->atime.tv_nsec = 0;
+		stat->mtime.tv_nsec = 0;
+		stat->ctime.tv_nsec = 0;
+	}
+	kfree(parent_path);
+}
